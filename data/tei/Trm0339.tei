		<body>
			<lg>
				<l rhyme="a" met="-+---+-" n="settenario">
					<!-- INPUT: Dol-cis+si-mi le-ga+mi =a -->
					<seg type="syl" met="-">Dol</seg>
					<seg type="syl" met="+">cis</seg>
					<seg type="syl" met="-">si</seg>
					<seg type="syl" met="-">mi </seg>
					<seg type="syl" met="-">le</seg>
					<seg type="syl" met="+">ga</seg>
					<seg type="syl" met="-">mi</seg>
				</l>
				<l rhyme="b" met="--+--+-" n="settenario">
					<!-- INPUT: Di pa-ro+le_a-mo-ro+se, =b -->
					<seg type="syl" met="-">Di </seg>
					<seg type="syl" met="-">pa</seg>
					<seg type="syl" met="+">ro</seg>
					<seg type="syl" met="-">le<c met="_"> </c>a</seg>
					<seg type="syl" met="-">mo</seg>
					<seg type="syl" met="+">ro</seg>
					<seg type="syl" met="-">se,</seg>
				</l>
				<l rhyme="c" met="---+-+---+-" n="endecasillabo">
					<!-- INPUT: Chi mi le-gò+ da scher+zo_e non mi scio+glie? =C -->
					<seg type="syl" met="-">Chi </seg>
					<seg type="syl" met="-">mi </seg>
					<seg type="syl" met="-">le</seg>
					<seg type="syl" met="+">gò </seg>
					<seg type="syl" met="-">da </seg>
					<seg type="syl" met="+">scher</seg>
					<seg type="syl" met="-">zo<c met="_"> </c>e </seg>
					<seg type="syl" met="-">non </seg>
					<seg type="syl" met="-">mi </seg>
					<seg type="syl" met="+">scio</seg>
					<seg type="syl" met="-">glie?</seg>
				</l>
				<l rhyme="c" met="-+-+-+--++-" n="endecasillabo">
					<!-- INPUT: Co-sì_e+gli dun+que scher+za_e co-sì+ co+glie? =C -->
					<seg type="syl" met="-">Co</seg>
					<seg type="syl" met="+">sì<c met="_"> </c>e</seg>
					<seg type="syl" met="-">gli </seg>
					<seg type="syl" met="+">dun</seg>
					<seg type="syl" met="-">que </seg>
					<seg type="syl" met="+">scher</seg>
					<seg type="syl" met="-">za<c met="_"> </c>e </seg>
					<seg type="syl" met="-">co</seg>
					<seg type="syl" met="+">sì </seg>
					<seg type="syl" met="+">co</seg>
					<seg type="syl" met="-">glie?</seg>
				</l>
				<l rhyme="d" met="-++--+-" n="settenario" enjamb="yes">
					<!-- INPUT: Co-sì+ l'al+me le-ga+te =d+ -->
					<seg type="syl" met="-">Co</seg>
					<seg type="syl" met="+">sì </seg>
					<seg type="syl" met="+">l'al</seg>
					<seg type="syl" met="-">me </seg>
					<seg type="syl" met="-">le</seg>
					<seg type="syl" met="+">ga</seg>
					<seg type="syl" met="-">te</seg>
				</l>
				<l rhyme="b" met="+----+---+-" n="endecasillabo">
					<!-- INPUT: So+no ne le ca-te+ne_in-si-dï-o+se? =B -->
					<seg type="syl" met="+">So</seg>
					<seg type="syl" met="-">no </seg>
					<seg type="syl" met="-">ne </seg>
					<seg type="syl" met="-">le </seg>
					<seg type="syl" met="-">ca</seg>
					<seg type="syl" met="+">te</seg>
					<seg type="syl" met="-">ne<c met="_"> </c>in</seg>
					<seg type="syl" met="-">si</seg>
					<seg type="syl" met="-">dï</seg>
					<seg type="syl" met="+">o</seg>
					<seg type="syl" met="-">se?</seg>
				</l>
				<l rhyme="c" met="-+-+-+-" n="settenario" enjamb="yes">
					<!-- INPUT: Al-men,+ chi sì+ m'al-lac+cia, =c+ -->
					<seg type="syl" met="-">Al</seg>
					<seg type="syl" met="+">men, </seg>
					<seg type="syl" met="-">chi </seg>
					<seg type="syl" met="+">sì </seg>
					<seg type="syl" met="-">m'al</seg>
					<seg type="syl" met="+">lac</seg>
					<seg type="syl" met="-">cia,</seg>
				</l>
				<l rhyme="c" met="-+-+-+-+-+-" n="endecasillabo">
					<!-- INPUT: Mi le+ghi_an-cor+ fra quel+le dol+ci brac+cia. =C -->
					<seg type="syl" met="-">Mi </seg>
					<seg type="syl" met="+">le</seg>
					<seg type="syl" met="-">ghi<c met="_"> </c>an</seg>
					<seg type="syl" met="+">cor </seg>
					<seg type="syl" met="-">fra </seg>
					<seg type="syl" met="+">quel</seg>
					<seg type="syl" met="-">le </seg>
					<seg type="syl" met="+">dol</seg>
					<seg type="syl" met="-">ci </seg>
					<seg type="syl" met="+">brac</seg>
					<seg type="syl" met="-">cia.</seg>
				</l>
