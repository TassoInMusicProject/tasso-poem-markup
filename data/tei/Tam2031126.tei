					<seg type="syl" met="-">cer</seg>
					<seg type="syl" met="+">tez</seg>
					<seg type="syl" met="-">za</seg>
				</l>
				<l rhyme="b" met="---+--+--+-" n="endecasillabo" enjamb="yes">
					<!-- INPUT: Ch'a lei di-spia+ce,_e che spia+cer le de+ve =B+ -->
					<seg type="syl" met="-">Ch'a </seg>
					<seg type="syl" met="-">lei </seg>
					<seg type="syl" met="-">di</seg>
					<seg type="syl" met="+">spia</seg>
