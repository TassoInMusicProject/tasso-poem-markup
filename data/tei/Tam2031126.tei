					<seg type="syl" met="-">si?</seg>
				</l>
				<l rhyme="f" met="-+++-+--++-" n="endecasillabo" enjamb="yes">
					<!-- INPUT: E-gua+le_è_il+ du+bio,_e_il ri+schio._Ahi, pur è+ me+glio =F+ -->
					<seg type="syl" met="-">E</seg>
					<seg type="syl" met="+">gua</seg>
					<seg type="syl" met="+">le<c met="_"> </c>è<c met="_"> </c>il </seg>
					<seg type="syl" met="+">du</seg>
					<seg type="syl" met="-">bio,<c met="_"> </c>e<c met="_"> </c>il </seg>
					<seg type="syl" met="+">ri</seg>
					<seg type="syl" met="-">schio.<c met="_"> </c>Ahi, </seg>
					<seg type="syl" met="-">pur </seg>
					<seg type="syl" met="+">è </seg>
					<seg type="syl" met="+">me</seg>
					<seg type="syl" met="-">glio</seg>
				</l>
				<l rhyme="d" met="+-+--+-+-+-" n="endecasillabo">
					<!-- INPUT: Co+me_ar-di+to mo-rir,+ che co+me vi+le. =D -->
					<seg type="syl" met="+">Co</seg>
					<seg type="syl" met="-">me<c met="_"> </c>ar</seg>
					<seg type="syl" met="+">di</seg>
