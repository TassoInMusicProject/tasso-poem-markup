					<seg type="syl" met="+">spia</seg>
					<seg type="syl" met="-">cer </seg>
					<seg type="syl" met="-">le </seg>
					<seg type="syl" met="+">de</seg>
					<seg type="syl" met="-">ve</seg>
				</l>
				<l rhyme="c" met="---+---+-+-" n="endecasillabo">
					<!-- INPUT: Di-rit-ta-men+te,_e tu cer-car+ non dé+i. =C -->
					<seg type="syl" met="-">Di</seg>
					<seg type="syl" met="-">rit</seg>
					<seg type="syl" met="-">ta</seg>
					<seg type="syl" met="+">men</seg>
					<seg type="syl" met="-">te,<c met="_"> </c>e </seg>
					<seg type="syl" met="-">tu </seg>
					<seg type="syl" met="-">cer</seg>
					<seg type="syl" met="+">car </seg>
					<seg type="syl" met="-">non </seg>
					<seg type="syl" met="+">dé</seg>
					<seg type="syl" met="-">i.</seg>
				</l>
				<l rhyme="d" met="---+-+---+-" n="endecasillabo">
					<!-- INPUT: Ma chi t'ac-cer+ta_an-cor+ che non sia ta+le? =D -->
					<seg type="syl" met="-">Ma </seg>
					<seg type="syl" met="-">chi </seg>
					<seg type="syl" met="-">t'ac</seg>
					<seg type="syl" met="+">cer</seg>
					<seg type="syl" met="-">ta<c met="_"> </c>an</seg>
					<seg type="syl" met="+">cor </seg>
					<seg type="syl" met="-">che </seg>
					<seg type="syl" met="-">non </seg>
					<seg type="syl" met="-">sia </seg>
					<seg type="syl" met="+">ta</seg>
					<seg type="syl" met="-">le?</seg>
				</l>
				<l rhyme="e" met="-+-+-+---+-" n="endecasillabo">
					<!-- INPUT: Hor s'e+gli fos+se ta+le,_e non v'an-das+si? =E -->
					<seg type="syl" met="-">Hor </seg>
					<seg type="syl" met="+">s'e</seg>
					<seg type="syl" met="-">gli </seg>
					<seg type="syl" met="+">fos</seg>
					<seg type="syl" met="-">se </seg>
					<seg type="syl" met="+">ta</seg>
