<TEI xmlns="http://www.tei-c.org/ns/1.0">
	<teiHeader>
		<fileDesc>
			<titleStmt>
				<title>Tasso in Music Project: verse analytical encoding sample</title>
			</titleStmt>
			<publicationStmt>
				<p>For Emiliano and Craig</p>
			</publicationStmt>
			<sourceDesc>
				<p>Born digital with examples from Tasso in Music Project</p>
			</sourceDesc>
		</fileDesc>
		<encodingDesc>
			<metDecl type="met">
				<metSym value="+">stressed syllable</metSym>
				<metSym value="-">unstressed syllable</metSym>
				<metSym value="_">elision (synalepha?)</metSym>
			</metDecl>
		</encodingDesc>
	</teiHeader>
	<text>
		<body>
			<lg>
				<l rhyme="a" met="+----+-" n="settenario">
					<!-- INPUT: Lun+ge da voi, mio co+re, =a -->
					<seg type="syl" met="+">Lun</seg>
					<seg type="syl" met="-">ge </seg>
					<seg type="syl" met="-">da </seg>
					<seg type="syl" met="-">voi, </seg>
					<seg type="syl" met="-">mio </seg>
					<seg type="syl" met="+">co</seg>
					<seg type="syl" met="-">re,</seg>
				</l>
				<l rhyme="a" met="+-+--+---+-" n="endecasillabo">
					<!-- INPUT: Mil+le vol+te m'uc-ci+de_il mio do-lo+re. =A -->
					<seg type="syl" met="+">Mil</seg>
					<seg type="syl" met="-">le </seg>
					<seg type="syl" met="+">vol</seg>
					<seg type="syl" met="-">te </seg>
					<seg type="syl" met="-">m'uc</seg>
					<seg type="syl" met="+">ci</seg>
					<seg type="syl" met="-">de<c met="_"> </c>il </seg>
					<seg type="syl" met="-">mio </seg>
					<seg type="syl" met="-">do</seg>
					<seg type="syl" met="+">lo</seg>
					<seg type="syl" met="-">re.</seg>
				</l>
				<l rhyme="b" met="-+---+-" n="settenario" enjamb="yes">
					<!-- INPUT: Per-ché+ la mia par-ti+ta =b+ -->
					<seg type="syl" met="-">Per</seg>
					<seg type="syl" met="+">ché </seg>
					<seg type="syl" met="-">la </seg>
					<seg type="syl" met="-">mia </seg>
					<seg type="syl" met="-">par</seg>
					<seg type="syl" met="+">ti</seg>
					<seg type="syl" met="-">ta</seg>
				</l>
				<l rhyme="c" met="-+-+-+--+--" n="endecasillabo">
					<!-- INPUT: Mi tol+se l'al+ma;_e s'i+o ri-pen+so_in lei =C -->
					<seg type="syl" met="-">Mi </seg>
					<seg type="syl" met="+">tol</seg>
					<seg type="syl" met="-">se </seg>
					<seg type="syl" met="+">l'al</seg>
					<seg type="syl" met="-">ma;<c met="_"> </c>e </seg>
					<seg type="syl" met="+">s'i</seg>
					<seg type="syl" met="-">o </seg>
					<seg type="syl" met="-">ri</seg>
					<seg type="syl" met="+">pen</seg>
					<seg type="syl" met="-">so<c met="_"> </c>in </seg>
					<seg type="syl" met="-">lei</seg>
				</l>
				<l rhyme="b" met="--+--+-" n="settenario">
					<!-- INPUT: Mi ri-to+glie la vi+ta, =b -->
					<seg type="syl" met="-">Mi </seg>
					<seg type="syl" met="-">ri</seg>
					<seg type="syl" met="+">to</seg>
					<seg type="syl" met="-">glie </seg>
					<seg type="syl" met="-">la </seg>
					<seg type="syl" met="+">vi</seg>
					<seg type="syl" met="-">ta,</seg>
				</l>
				<l rhyme="c" met="-+-+-+---+-" n="endecasillabo">
					<!-- INPUT: E tut+ti so+no mor+ti_i pen-si-er+ miei. =C -->
					<seg type="syl" met="-">E </seg>
					<seg type="syl" met="+">tut</seg>
					<seg type="syl" met="-">ti </seg>
					<seg type="syl" met="+">so</seg>
					<seg type="syl" met="-">no </seg>
					<seg type="syl" met="+">mor</seg>
					<seg type="syl" met="-">ti<c met="_"> </c>i </seg>
					<seg type="syl" met="-">pen</seg>
					<seg type="syl" met="-">si</seg>
					<seg type="syl" met="+">er </seg>
					<seg type="syl" met="-">miei.</seg>
				</l>
				<l rhyme="b" met="--+--+-" n="settenario">
					<!-- INPUT: Oh mi-se+ria_in-fi-ni+ta! =b -->
					<seg type="syl" met="-">Oh </seg>
					<seg type="syl" met="-">mi</seg>
					<seg type="syl" met="+">se</seg>
					<seg type="syl" met="-">ria<c met="_"> </c>in</seg>
					<seg type="syl" met="-">fi</seg>
					<seg type="syl" met="+">ni</seg>
					<seg type="syl" met="-">ta!</seg>
				</l>
				<l rhyme="a" met="---+-+-+-+-" n="endecasillabo">
					<!-- INPUT: È quel fe-li+ce ch'u+na vol+ta muo+re. =A -->
					<seg type="syl" met="-">È </seg>
					<seg type="syl" met="-">quel </seg>
					<seg type="syl" met="-">fe</seg>
					<seg type="syl" met="+">li</seg>
					<seg type="syl" met="-">ce </seg>
					<seg type="syl" met="+">ch'u</seg>
					<seg type="syl" met="-">na </seg>
					<seg type="syl" met="+">vol</seg>
					<seg type="syl" met="-">ta </seg>
					<seg type="syl" met="+">muo</seg>
					<seg type="syl" met="-">re.</seg>
				</l>
			</lg>
		</body>
	</text>
</TEI>
