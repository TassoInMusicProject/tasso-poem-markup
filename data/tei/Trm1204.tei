	<text>
		<body>
			<lg>
				<l rhyme="a" met="+-+--+-" n="settenario" enjamb="yes">
					<!-- INPUT: Que+sta lie+ve zan-za+ra =a+ -->
					<seg type="syl" met="+">Que</seg>
					<seg type="syl" met="-">sta </seg>
					<seg type="syl" met="+">lie</seg>
					<seg type="syl" met="-">ve </seg>
					<seg type="syl" met="-">zan</seg>
					<seg type="syl" met="+">za</seg>
					<seg type="syl" met="-">ra</seg>
				</l>
				<l rhyme="b" met="+-+--+-" n="settenario">
					<!-- INPUT: Quan+to_ha sor+te mi-glio+re =b -->
					<seg type="syl" met="+">Quan</seg>
					<seg type="syl" met="-">to<c met="_"> </c>ha </seg>
					<seg type="syl" met="+">sor</seg>
					<seg type="syl" met="-">te </seg>
					<seg type="syl" met="-">mi</seg>
					<seg type="syl" met="+">glio</seg>
					<seg type="syl" met="-">re</seg>
				</l>
				<l rhyme="b" met="---+---+-+-" n="endecasillabo">
					<!-- INPUT: De la far-fal+la che s'in-fiam+ma_e mo+re! =B -->
					<seg type="syl" met="-">De </seg>
					<seg type="syl" met="-">la </seg>
					<seg type="syl" met="-">far</seg>
					<seg type="syl" met="+">fal</seg>
					<seg type="syl" met="-">la </seg>
					<seg type="syl" met="-">che </seg>
					<seg type="syl" met="-">s'in</seg>
					<seg type="syl" met="+">fiam</seg>
					<seg type="syl" met="-">ma<c met="_"> </c>e </seg>
					<seg type="syl" met="+">mo</seg>
					<seg type="syl" met="-">re!</seg>
				</l>
				<l rhyme="c" met="+--+-+-" n="settenario" enjamb="yes">
					<!-- INPUT: L'u+na di chia+ro fo+co, =c+ -->
					<seg type="syl" met="+">L'u</seg>
					<seg type="syl" met="-">na </seg>
					<seg type="syl" met="-">di </seg>
					<seg type="syl" met="+">chia</seg>
					<seg type="syl" met="-">ro </seg>
					<seg type="syl" met="+">fo</seg>
					<seg type="syl" met="-">co,</seg>
				</l>
				<l rhyme="d" met="--++++-" n="settenario">
					<!-- INPUT: Di gen-til+ san+gue_è+ va+ga =d -->
					<seg type="syl" met="-">Di </seg>
					<seg type="syl" met="-">gen</seg>
					<seg type="syl" met="+">til </seg>
					<seg type="syl" met="+">san</seg>
					<seg type="syl" met="+">gue<c met="_"> </c>è </seg>
					<seg type="syl" met="+">va</seg>
					<seg type="syl" met="-">ga</seg>
				</l>
				<l rhyme="d" met="+--+--++-+-" n="endecasillabo">
					<!-- INPUT: L'al+tra, che vi+ve di sì+ bel+la pia+ga. =D -->
					<seg type="syl" met="+">L'al</seg>
					<seg type="syl" met="-">tra, </seg>
					<seg type="syl" met="-">che </seg>
					<seg type="syl" met="+">vi</seg>
					<seg type="syl" met="-">ve </seg>
					<seg type="syl" met="-">di </seg>
					<seg type="syl" met="+">sì </seg>
					<seg type="syl" met="+">bel</seg>
					<seg type="syl" met="-">la </seg>
					<seg type="syl" met="+">pia</seg>
					<seg type="syl" met="-">ga.</seg>
				</l>
				<l rhyme="c" met="---+-+-" n="settenario">
					<!-- INPUT: Oh for-tu-na+to lo+co =c -->
					<seg type="syl" met="-">Oh </seg>
					<seg type="syl" met="-">for</seg>
					<seg type="syl" met="-">tu</seg>
					<seg type="syl" met="+">na</seg>
					<seg type="syl" met="-">to </seg>
					<seg type="syl" met="+">lo</seg>
					<seg type="syl" met="-">co</seg>
				</l>
				<l rhyme="e" met="-+-+-+-" n="settenario">
					<!-- INPUT: Tra_'l men+to_e_'l ca+sto pet+to! =e -->
					<seg type="syl" met="-">Tra<c met="_"> </c>'l </seg>
					<seg type="syl" met="+">men</seg>
					<seg type="syl" met="-">to<c met="_"> </c>e<c met="_"> </c>'l </seg>
					<seg type="syl" met="+">ca</seg>
					<seg type="syl" met="-">sto </seg>
					<seg type="syl" met="+">pet</seg>
					<seg type="syl" met="-">to!</seg>
				</l>
				<l rhyme="e" met="-+-----+-+-" n="endecasillabo">
					<!-- INPUT: Al-tro+ve non fu mai mag-gior+ di-let+to. =E -->
					<seg type="syl" met="-">Al</seg>
					<seg type="syl" met="+">tro</seg>
					<seg type="syl" met="-">ve </seg>
					<seg type="syl" met="-">non </seg>
					<seg type="syl" met="-">fu </seg>
					<seg type="syl" met="-">mai </seg>
					<seg type="syl" met="-">mag</seg>
					<seg type="syl" met="+">gior </seg>
					<seg type="syl" met="-">di</seg>
					<seg type="syl" met="+">let</seg>
					<seg type="syl" met="-">to.</seg>
				</l>
			</lg>
