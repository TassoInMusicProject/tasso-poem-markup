	<text>
		<body>
			<lg>
				<l rhyme="a" met="+-+--+-" n="settenario" enjamb="yes">
					<!-- INPUT: Ar+di_e ge+la_a tua vo+glia, =a+ -->
					<seg type="syl" met="+">Ar</seg>
					<seg type="syl" met="-">di<c met="_"> </c>e </seg>
					<seg type="syl" met="+">ge</seg>
					<seg type="syl" met="-">la<c met="_"> </c>a </seg>
					<seg type="syl" met="-">tua </seg>
					<seg type="syl" met="+">vo</seg>
					<seg type="syl" met="-">glia,</seg>
				</l>
				<l rhyme="b" met="+----+-" n="settenario">
					<!-- INPUT: Per+fi-do_ed im-pu-di+co, =b -->
					<seg type="syl" met="+">Per</seg>
					<seg type="syl" met="-">fi</seg>
					<seg type="syl" met="-">do<c met="_"> </c>ed </seg>
					<seg type="syl" met="-">im</seg>
					<seg type="syl" met="-">pu</seg>
					<seg type="syl" met="+">di</seg>
					<seg type="syl" met="-">co,</seg>
				</l>
				<l rhyme="b" met="+-+--+-" n="settenario">
					<!-- INPUT: O+r'a-man+te_or ne-mi+co; =b -->
					<seg type="syl" met="+">O</seg>
					<seg type="syl" met="-">r'a</seg>
					<seg type="syl" met="+">man</seg>
					<seg type="syl" met="-">te<c met="_"> </c>or </seg>
					<seg type="syl" met="-">ne</seg>
					<seg type="syl" met="+">mi</seg>
					<seg type="syl" met="-">co;</seg>
				</l>
				<l rhyme="c" met="+--+-+-" n="settenario">
					<!-- INPUT: Ché+ d'in-co-stan+te_in-ge+gno =c -->
					<seg type="syl" met="+">Ché </seg>
					<seg type="syl" met="-">d'in</seg>
					<seg type="syl" met="-">co</seg>
					<seg type="syl" met="+">stan</seg>
					<seg type="syl" met="-">te<c met="_"> </c>in</seg>
					<seg type="syl" met="+">ge</seg>
					<seg type="syl" met="-">gno</seg>
				</l>
				<l rhyme="c" met="+--+-+---+-" n="endecasillabo">
					<!-- INPUT: Po+co l'a-mo+re_i' sti+mo_e men lo sde+gno: =C -->
					<seg type="syl" met="+">Po</seg>
					<seg type="syl" met="-">co </seg>
					<seg type="syl" met="-">l'a</seg>
					<seg type="syl" met="+">mo</seg>
					<seg type="syl" met="-">re<c met="_"> </c>i' </seg>
					<seg type="syl" met="+">sti</seg>
					<seg type="syl" met="-">mo<c met="_"> </c>e </seg>
					<seg type="syl" met="-">men </seg>
					<seg type="syl" met="-">lo </seg>
					<seg type="syl" met="+">sde</seg>
					<seg type="syl" met="-">gno:</seg>
				</l>
				<l rhyme="d" met="---+-+-" n="settenario">
					<!-- INPUT: E se_'l tuo_a-mor+ fu va+no, =d -->
					<seg type="syl" met="-">E </seg>
					<seg type="syl" met="-">se<c met="_"> </c>'l </seg>
					<seg type="syl" met="-">tuo<c met="_"> </c>a</seg>
					<seg type="syl" met="+">mor </seg>
					<seg type="syl" met="-">fu </seg>
					<seg type="syl" met="+">va</seg>
					<seg type="syl" met="-">no,</seg>
				</l>
				<l rhyme="d" met="---+-----+-" n="endecasillabo">
					<!-- INPUT: Van fia lo sde+gno del tuo cor in-sa+no. =D -->
					<seg type="syl" met="-">Van </seg>
					<seg type="syl" met="-">fia </seg>
					<seg type="syl" met="-">lo </seg>
					<seg type="syl" met="+">sde</seg>
					<seg type="syl" met="-">gno </seg>
					<seg type="syl" met="-">del </seg>
					<seg type="syl" met="-">tuo </seg>
					<seg type="syl" met="-">cor </seg>
					<seg type="syl" met="-">in</seg>
					<seg type="syl" met="+">sa</seg>
					<seg type="syl" met="-">no.</seg>
				</l>
			</lg>
		</body>
	</text>
