					<seg type="syl" met="-">de </seg>
					<seg type="syl" met="-">sei </seg>
					<seg type="syl" met="+">svel</seg>
					<seg type="syl" met="-">ta,<c met="_"> </c>e</seg>
					<seg type="syl" met="+">gua</seg>
					<seg type="syl" met="-">le!</seg>
				</l>
				<l rhyme="a" met="+--+-+-" n="settenario" enjamb="yes">
					<!-- INPUT: Cre+sci fe-li+ce;_e s'el+la =a+ -->
					<seg type="syl" met="+">Cre</seg>
					<seg type="syl" met="-">sci </seg>
					<seg type="syl" met="-">fe</seg>
					<seg type="syl" met="+">li</seg>
					<seg type="syl" met="-">ce;<c met="_"> </c>e </seg>
					<seg type="syl" met="+">s'el</seg>
					<seg type="syl" met="-">la</seg>
				</l>
				<l rhyme="c" met="+----+-" n="settenario">
					<!-- INPUT: Sec+ca non si rin-ver+de, =c -->
					<seg type="syl" met="+">Sec</seg>
					<seg type="syl" met="-">ca </seg>
					<seg type="syl" met="-">non </seg>
					<seg type="syl" met="-">si </seg>
					<seg type="syl" met="-">rin</seg>
					<seg type="syl" met="+">ver</seg>
					<seg type="syl" met="-">de,</seg>
				</l>
				<l rhyme="c" met="--++---+-+-" n="endecasillabo">
					<!-- INPUT: Tu man-tien+ vi+vo fron-deg-gian+do_il ver+de. =C -->
					<seg type="syl" met="-">Tu </seg>
					<seg type="syl" met="-">man</seg>
					<seg type="syl" met="+">tien </seg>
					<seg type="syl" met="+">vi</seg>
					<seg type="syl" met="-">vo </seg>
					<seg type="syl" met="-">fron</seg>
					<seg type="syl" met="-">deg</seg>
					<seg type="syl" met="+">gian</seg>
					<seg type="syl" met="-">do<c met="_"> </c>il </seg>
					<seg type="syl" met="+">ver</seg>
					<seg type="syl" met="-">de.</seg>
				</l>
				<l rhyme="a" met="--+--+-" n="settenario">
					<!-- INPUT: Fra la chio+ma no-vel+la =a -->
					<seg type="syl" met="-">Fra </seg>
					<seg type="syl" met="-">la </seg>
					<seg type="syl" met="+">chio</seg>
					<seg type="syl" met="-">ma </seg>
					<seg type="syl" met="-">no</seg>
					<seg type="syl" met="+">vel</seg>
					<seg type="syl" met="-">la</seg>
				</l>
				<l rhyme="d" met="+--+-+-" n="settenario" enjamb="yes">
					<!-- INPUT: L'au+ra con dol+ci_er-ro+ri =d+ -->
					<seg type="syl" met="+">L'au</seg>
