					<seg type="syl" met="-">ri</seg>
				</l>
				<l rhyme="d" met="+--+---+-+-" n="endecasillabo">
					<!-- INPUT: Scher+zi mai sem+pre_e_i par-go-let+ti_A-mo+ri. =D -->
					<seg type="syl" met="+">Scher</seg>
					<seg type="syl" met="-">zi </seg>
					<seg type="syl" met="-">mai </seg>
					<seg type="syl" met="+">sem</seg>
