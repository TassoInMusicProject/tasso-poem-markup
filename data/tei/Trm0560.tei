	<text>
		<body>
			<lg>
				<l rhyme="a" met="-+---+-" n="settenario" enjamb="yes">
					<!-- INPUT: Tar-qui+nia, se ri-mi+ri =a+ -->
					<seg type="syl" met="-">Tar</seg>
					<seg type="syl" met="+">qui</seg>
					<seg type="syl" met="-">nia, </seg>
					<seg type="syl" met="-">se </seg>
					<seg type="syl" met="-">ri</seg>
					<seg type="syl" met="+">mi</seg>
					<seg type="syl" met="-">ri</seg>
				</l>
				<l rhyme="a" met="---+-+-" n="settenario">
					<!-- INPUT: I bei ce-le+sti gi+ri, =a -->
					<seg type="syl" met="-">I </seg>
					<seg type="syl" met="-">bei </seg>
					<seg type="syl" met="-">ce</seg>
					<seg type="syl" met="+">le</seg>
					<seg type="syl" met="-">sti </seg>
					<seg type="syl" met="+">gi</seg>
					<seg type="syl" met="-">ri,</seg>
				</l>
				<l rhyme="b" met="-++---+" n="settenario">
					<!-- INPUT: Il cie+lo_es+ser vor-re-i;+ =b -->
					<seg type="syl" met="-">Il </seg>
					<seg type="syl" met="+">cie</seg>
					<seg type="syl" met="+">lo<c met="_"> </c>es</seg>
					<seg type="syl" met="-">ser </seg>
					<seg type="syl" met="-">vor</seg>
					<seg type="syl" met="-">re</seg>
					<seg type="syl" met="+">i;</seg>
				</l>
				<l rhyme="b" met="-+-+-+-" n="settenario">
					<!-- INPUT: Per-ché+ ne gli_oc+chi mie+i =b -->
					<seg type="syl" met="-">Per</seg>
					<seg type="syl" met="+">ché </seg>
					<seg type="syl" met="-">ne </seg>
					<seg type="syl" met="+">gli<c met="_"> </c>oc</seg>
					<seg type="syl" met="-">chi </seg>
					<seg type="syl" met="+">mie</seg>
					<seg type="syl" met="-">i</seg>
				</l>
				<l rhyme="c" met="+----+-" n="settenario" enjamb="yes">
					<!-- INPUT: Fis+so tu ri-vol-ges+si =c+ -->
					<seg type="syl" met="+">Fis</seg>
					<seg type="syl" met="-">so </seg>
					<seg type="syl" met="-">tu </seg>
					<seg type="syl" met="-">ri</seg>
					<seg type="syl" met="-">vol</seg>
					<seg type="syl" met="+">ges</seg>
					<seg type="syl" met="-">si</seg>
				</l>
				<l rhyme="d" met="--+--+-" n="settenario">
					<!-- INPUT: Le tue dol+ci fa-vil+le, =d -->
					<seg type="syl" met="-">Le </seg>
					<seg type="syl" met="-">tue </seg>
					<seg type="syl" met="+">dol</seg>
					<seg type="syl" met="-">ci </seg>
					<seg type="syl" met="-">fa</seg>
					<seg type="syl" met="+">vil</seg>
					<seg type="syl" met="-">le,</seg>
				</l>
				<l rhyme="c" met="---+-+-" n="settenario" enjamb="yes">
					<!-- INPUT: Io va-gheg-giar+ po-tes+si =c+ -->
					<seg type="syl" met="-">Io </seg>
					<seg type="syl" met="-">va</seg>
					<seg type="syl" met="-">gheg</seg>
					<seg type="syl" met="+">giar </seg>
					<seg type="syl" met="-">po</seg>
					<seg type="syl" met="+">tes</seg>
					<seg type="syl" met="-">si</seg>
				</l>
				<l rhyme="d" met="+--+---+-+-" n="endecasillabo">
					<!-- INPUT: Mil+le bel-lez+ze tue con lu+ci mil+le. =D -->
					<seg type="syl" met="+">Mil</seg>
					<seg type="syl" met="-">le </seg>
					<seg type="syl" met="-">bel</seg>
					<seg type="syl" met="+">lez</seg>
					<seg type="syl" met="-">ze </seg>
					<seg type="syl" met="-">tue </seg>
					<seg type="syl" met="-">con </seg>
					<seg type="syl" met="+">lu</seg>
					<seg type="syl" met="-">ci </seg>
					<seg type="syl" met="+">mil</seg>
					<seg type="syl" met="-">le.</seg>
				</l>
			</lg>
		</body>
	</text>
