		<body>
			<lg>
				<l rhyme="a" met="+--+-+-" n="settenario" enjamb="yes">
					<!-- INPUT: Dol+ce mia fiam+ma, dol+ce =a+ -->
					<seg type="syl" met="+">Dol</seg>
					<seg type="syl" met="-">ce </seg>
					<seg type="syl" met="-">mia </seg>
					<seg type="syl" met="+">fiam</seg>
					<seg type="syl" met="-">ma, </seg>
					<seg type="syl" met="+">dol</seg>
					<seg type="syl" met="-">ce</seg>
				</l>
				<l rhyme="b" met="-+---+-" n="settenario">
					<!-- INPUT: Mia pe+na_e mio tor-men+to, =b -->
					<seg type="syl" met="-">Mia </seg>
					<seg type="syl" met="+">pe</seg>
					<seg type="syl" met="-">na<c met="_"> </c>e </seg>
					<seg type="syl" met="-">mio </seg>
					<seg type="syl" met="-">tor</seg>
					<seg type="syl" met="+">men</seg>
					<seg type="syl" met="-">to,</seg>
				</l>
				<l rhyme="b" met="++-+-+-+-+-" n="endecasillabo">
					<!-- INPUT: Dol+ce_è_'l+ lan-guir,+ dol-ce_è_'l+ mar-tir+ ch'io sen+to, =B -->
					<seg type="syl" met="+">Dol</seg>
					<seg type="syl" met="+">ce<c met="_"> </c>è<c met="_"> </c>'l </seg>
					<seg type="syl" met="-">lan</seg>
					<seg type="syl" met="+">guir, </seg>
					<seg type="syl" met="-">dol</seg>
					<seg type="syl" met="+">ce<c met="_"> </c>è<c met="_"> </c>'l </seg>
					<seg type="syl" met="-">mar</seg>
					<seg type="syl" met="+">tir </seg>
					<seg type="syl" met="-">ch'io </seg>
					<seg type="syl" met="+">sen</seg>
					<seg type="syl" met="-">to,</seg>
				</l>
				<l rhyme="c" met="+-+--+---+-" n="endecasillabo">
					<!-- INPUT: Dol+ci so+no_i tuoi rag+gi_e le fa-vil+le; =C -->
					<seg type="syl" met="+">Dol</seg>
					<seg type="syl" met="-">ci </seg>
					<seg type="syl" met="+">so</seg>
					<seg type="syl" met="-">no<c met="_"> </c>i </seg>
					<seg type="syl" met="-">tuoi </seg>
					<seg type="syl" met="+">rag</seg>
					<seg type="syl" met="-">gi<c met="_"> </c>e </seg>
					<seg type="syl" met="-">le </seg>
					<seg type="syl" met="-">fa</seg>
					<seg type="syl" met="+">vil</seg>
					<seg type="syl" met="-">le;</seg>
				</l>
				<l rhyme="c" met="-+-+-+-" n="settenario" enjamb="yes">
					<!-- INPUT: E men+tre_a mil+le_a mil+le =c+ -->
					<seg type="syl" met="-">E </seg>
					<seg type="syl" met="+">men</seg>
					<seg type="syl" met="-">tre<c met="_"> </c>a </seg>
					<seg type="syl" met="+">mil</seg>
					<seg type="syl" met="-">le<c met="_"> </c>a </seg>
					<seg type="syl" met="+">mil</seg>
					<seg type="syl" met="-">le</seg>
				</l>
				<l rhyme="d" met="+--+-+-" n="settenario">
					<!-- INPUT: Pas+sa-no_in que+sto co+re, =d -->
					<seg type="syl" met="+">Pas</seg>
					<seg type="syl" met="-">sa</seg>
					<seg type="syl" met="-">no<c met="_"> </c>in </seg>
					<seg type="syl" met="+">que</seg>
					<seg type="syl" met="-">sto </seg>
					<seg type="syl" met="+">co</seg>
					<seg type="syl" met="-">re,</seg>
				</l>
				<l rhyme="d" met="+--+--+-" n="8">
					<!-- INPUT: Di+co, &mdash; S'e+gli si mo+re, =d -->
					<seg type="syl" met="+">Di</seg>
					<seg type="syl" met="-">co, </seg>
					<seg type="syl" met="-">&amp;mdash; </seg>
					<seg type="syl" met="+">S'e</seg>
					<seg type="syl" met="-">gli </seg>
					<seg type="syl" met="-">si </seg>
					<seg type="syl" met="+">mo</seg>
					<seg type="syl" met="-">re,</seg>
				</l>
				<l rhyme="e" met="---+-+-" n="settenario">
					<!-- INPUT: Il suo mo-rir+ non prez+za, =e -->
					<seg type="syl" met="-">Il </seg>
					<seg type="syl" met="-">suo </seg>
					<seg type="syl" met="-">mo</seg>
					<seg type="syl" met="+">rir </seg>
					<seg type="syl" met="-">non </seg>
					<seg type="syl" met="+">prez</seg>
					<seg type="syl" met="-">za,</seg>
				</l>
				<l rhyme="e" met="+-+--+---+--" n="12">
					<!-- INPUT: Né+ mor-rà+ per do-lor,+ ma per dol-cez+za. &mdash; =E -->
					<seg type="syl" met="+">Né </seg>
					<seg type="syl" met="-">mor</seg>
					<seg type="syl" met="+">rà </seg>
					<seg type="syl" met="-">per </seg>
					<seg type="syl" met="-">do</seg>
					<seg type="syl" met="+">lor, </seg>
					<seg type="syl" met="-">ma </seg>
					<seg type="syl" met="-">per </seg>
					<seg type="syl" met="-">dol</seg>
					<seg type="syl" met="+">cez</seg>
					<seg type="syl" met="-">za. </seg>
					<seg type="syl" met="-">&amp;mdash;</seg>
				</l>
